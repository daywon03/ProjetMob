<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Partie Connexion (Gauche) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Bouton Retour -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="@string/retour"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start" />

        <!-- Titre Identifiez-vous -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identifiez_vous"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp" />

        <!-- Conteneur Email -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_mail_outline_24" />

            <Space
                android:layout_width="32dp"
                android:layout_height="1dp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="276dp"
                android:layout_height="43dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Conteneur Mot de Passe -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/lock" />

            <Space
                android:layout_width="32dp"
                android:layout_height="1dp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="276dp"
                android:layout_height="43dp"
                android:ems="10"
                android:hint="@string/mot_de_passe"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Mot de passe oublié -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mot_de_passe_oubli"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"/>

        <!-- Bouton Se connecter -->
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="@string/se_connecter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <!-- Partie Réseaux Sociaux (Droite) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="135dp">

        <!-- Séparateur (Barre centrée) -->
        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"/>

        <!-- Texte "OU" centré -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ou"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:elevation="10dp"/>

        <!-- Séparateur (Barre centrée) -->
        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <!-- Partie Réseaux Sociaux (Droite) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="25dp">

        <!-- Créer un compte -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nouveau_sur_studio_ghibli_cr_er_un_compte"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginTop="32dp" />

        <!-- Conteneur des icônes Facebook & Google -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image de Facebook -->
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/img_facebook_foreground"
                android:layout_marginEnd="32dp"/>

            <!-- Image de Google -->
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/img_google_foreground"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
